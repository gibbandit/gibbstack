{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@acme/provider": ["libs/provider/src/index.ts"],
      "@acme/graphql": ["libs/graphql/src/index.ts"],
      "@acme/urql": ["libs/utils/urql/index.ts"],
      "@acme/features/home": ["libs/features/home/src/index.ts"],
      "@acme/utils/ui": ["libs/utils/ui/src/index.ts"],
      "@acme/utils/theme": ["libs/utils/theme/index.ts"],
      "@acme/utils/kv": ["libs/utils/kv/index.ts"],
      "@acme/utils/safe-area": ["libs/utils/safe-area/src/index.ts"],
      "@acme/components": ["components/ui/src/index.ts"],
      "@acme/atoms/theme": ["libs/atoms/theme/src/index.ts"],
      "@acme/components/list": ["components/list/index.ts"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "libs/graphql/schema.graphql"
      }
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
